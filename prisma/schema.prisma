generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "foreignKeys"
}

enum Status {
  not_sold
  partially_paid
  fully_paid
  registry_transferred
}

model Plot {
  id Int @id
  dimension String?  @db.VarChar(255)
  square_feet Int?
  status Status
  sold_date  DateTime?
  fully_sold_date DateTime?
  sold_price Int?
  created_at DateTime @default(now())
  customer_id Int?
  registry_transfer_date DateTime?
  registry_given_to String?
}

model Customer {
  id Int @id @default(autoincrement())
  name String  @db.VarChar(255)
  son_of String  @db.VarChar(255)
  cnic String  @db.VarChar(15)
  recurring_payment_month Int
  created_at DateTime @default(now())
}

model Payments {
  id Int @id @default(autoincrement())
  description String?  @db.VarChar(255)
  plot_id Int
  customer_id Int
  payment_date DateTime @default(now())
  payment_value Int
}

model Sale_Registry {
  id Int @id @default(autoincrement())
  plot_id Int @unique
  created_at DateTime @default(now())
}

