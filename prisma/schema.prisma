generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "foreignKeys"
}

enum Status {
  not_sold
  partially_paid
  fully_paid
  registry_transferred
}

enum PaymentType {
  down_payment
  development_charge
  installment
  other
}

enum PlotTransferStatus {
yes
no
}

