                          "type": "number"
                        },
                        "fully_sold_date": {
                          "type": "string",
                          "format": "date"
                        },
                        "created_at": {
                          "type": "string",
                          "format": "date"
                        },
                        "updated_at": {
                          "type": "string",
                          "format": "date"
                        },
                        "plot_status": {
                          "type": "string",
                          "enum": [
                            "not_sold",
                            "partially_paid",
                            "fully_paid",
                            "registry_transferred"
                          ]
                        }
                      }
                    },
                    "sale": {
                      "type": "object",
                      "nullable": true,
                      "properties": {
                        "sold_price": {
                          "type": "number"
                        },
                        "sold_date": {
                          "type": "string"
                        },
                        "plotSaleId": {
                          "type": "number"
                        }
                      }
                    },
                    "customer": {
                      "type": "object",
                      "nullable": true,
                      "properties": {
                        "id": {
                          "type": "number"
                        },
                        "name": {
                          "type": "string"
                        },
                        "son_of": {
                          "type": "string"
                        },
                        "phone_number": {
                          "type": "string"
                        },
                        "address": {
                          "type": "string"
                        },
                        "cnic": {
                          "type": "string"
                        },
                        "created_at": {
                          "type": "string",
                          "format": "date"
                        },
                        "updated_at": {
                          "type": "string",
                          "format": "date"
                        }
                      }
                    },
                    "payment_history": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "number"
                        },
                        "description": {
                          "type": "string"
                        },
                        "payment_type": {
                          "type": "string",
                          "enum": [
                            "down_payment",
                            "development_charge",
                            "installment",
                            "other"
                          ]
                        },
                        "sale_id": {
                          "type": "number"
                        },
                        "payment_date": {
                          "type": "string",
                          "format": "date"
                        },
                        "payment_status": {
                          "type": "string",
                          "enum": [
                            "active",
                            "refund"
                          ]
                        },
                        "payment_value": {
                          "type": "number"
                        },
                        "created_at": {
                          "type": "string",
                          "format": "date"
                        }
                      }
                    },
                    "payment_plan": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "number"
                        },
                        "payment_type": {
                          "type": "string",
                          "enum": [
                            "down_payment",
                            "development_charge",
