    "/api/payment/add": {
      "post": {
        "tags": [
          "payment"
        ],
        "summary": "create payment",
        "description": "add payments against customers in the databse",
        "operationId": "createPayment",
        "requestBody": {
          "description": "The request body contains saleId and info about payment such as value date",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "saleId": {
                    "type": "number"
                  },
                  "payment": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "number"
                      },
                      "dateParsed": {
                        "type": "string"
                      },
                      "dateISOString": {
                        "type": "string"
                      },
                      "value": {
                        "type": "number"
                      },
                      "description": {
                        "type": "string"
                      },
                      "paymentType": {
                        "type": "string",
                        "enum": [
                          "down_payment",
                          "development_charge",
                          "installment",
                          "other"
                        ]
                      }
                    }
                  }
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "created": {
                      "type": "boolean"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Invalid data supplied",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "something went wrong with the server"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
